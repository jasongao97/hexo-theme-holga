<article class="post">
  <div class="post-title">
    <h2 class="title"><%= page.title %></h2>
  </div>
   <div class="post-meta">
    <span class="post-time"><%- date(page.date, "YYYY-MM-DD") %></span>
    <span class="post-author"><%- page.author %></span>
  </div>
  <div class="post-content">
    <%- page.content %>
  </div>
</article>