<header>
  <div class="header">
    <div class="blog-title">
      <a href="<%- url_for() %>" class="logo"><%= config.title %></a>
    </div>
    <nav class="navbar hidden-xs-only">
      <ul class="menu">
        <% for (name in theme.menu) { %>
          <li class="menu-item">
            <a href="<%- url_for(theme.menu[name]) %>" class="menu-item-link"><%- __('Menu.' + name) %></a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>

  <nav class="header-nav hidden-sm-and-up">
    <ul class="menu">
      <% for (name in theme.menu) { %>
        <li class="menu-item">
          <a href="<%- url_for(theme.menu[name]) %>" class="menu-item-link"><%- __('Menu.' + name) %></a>
        </li>
      <% } %>
    </ul>
  </nav>
  
</header>